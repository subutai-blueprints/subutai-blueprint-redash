{
    "name": "${environmentName}",
    "description": "Subutai Redash",
    "version": "1.0.0",
    "author": "https://github.com/marcoarthur",
    "ssh-key": "mprado", 
    "containers": [
        {
            "hostname": "${hostName}",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${domainName}",
                    "internal-port": "80",
                    "external-port": "80"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "peers"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/marcoarthur/subutai-blueprint-redash/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain_name_var",
                "value": "${domainName}"
            }
        ],
        "groups": [
            {
                "name": "rtd",
                "hostnames": [
                    "${hostName}"
                ]
            }
        ] 
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "subutai-redash",
            "validation": "[a-zA-Z0-9\\-]+"
        },
        "hostName": {
            "description": "Enter the hostname",
            "type": "string",
            "default": "redash",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "SMALL",
            "validation": "SMALL,MEDIUM,LARGE"
        }
    }
}
